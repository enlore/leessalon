$msg-black = rgba(0, 0, 0, 0.46)
header
    padding-top 4em
    padding-bottom 4em
    text-align center
    display block

    .hours
        color white
        background-color black
        padding 3px
        padding-left 10px
        padding-right 10px

    .header-img-wrap
        display inline-block
        border 1px solid $black
        padding 1em
        position relative

        address
            color $white
            p
                kreon()
                font-size 24px

        .message
            display none

            @media screen and (min-width: $tablet)
                display block

            position absolute
            background-color $msg-black
            padding-left 1em
            padding-right 1em
            bottom 10%
            left 1em
            padding-top 1em
            border-radius 5px
            box-shadow 6px 0 18px 10px $msg-black

            hr
                border-color black
                border-width 2px
                width 50%

            img
                width 400px
                margin-left auto
                margin-right auto

    address
        font-size 22px
