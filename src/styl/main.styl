$tablet = 768px
$medium = 992px
$large = 1200px

$black = #222

$white = #F8F8F8

$white-alpha = rgba(248, 248, 248, 0.7)

$blue = #00fffa
$nav-active-color = $blue

$gold = #F6EB14
$btn-call-color = $gold

@import 'fonts'
@import 'components'
@import 'util'
@import 'header'
@import 'nav'
@import 'gallery'
@import 'services'

body
    background-image url('/img/bg.jpg')
    background-position 0px -600px
    background-attachment fixed

    @media screen and (min-width: $tablet)
        background-position center center

footer
    border-top 1px solid $black
    background-color $white
    background-image url('/img/footer_bg.jpg')
    background-size cover

$intro-border = $black
$intro-shadow = $black

.lead-copy
    padding 1em
    border-radius 10px
    text-align center
    background-color $white
    background-color $white-alpha

    p.lead
        font-size 26px
    p
        font-size 20px

.accredations
    z-index 1
    position relative
    img
        margin-top 3em

        @media screen and (min-width: $tablet)
            margin-top 0

    .row
        margin-bottom 2em

.services
    background-color $white
    background-image url('/img/hair_swatches.jpg')
    border-top 1px solid $intro-border
    border-bottom 1px solid $intro-border


    box-shadow inset 0px 4px 2px -2px $intro-shadow,
        inset 0px -4px 2px -2px $intro-shadow

    overflow hidden

    .copy
        z-index 2

.service-boxes
    li
        a
            display block
            margin 1em auto
            position relative
            box-shadow 0px 10px 1px -5px $black
            background-repeat no-repeat

            $dimension = 225px

            height $dimension
            width $dimension

            @media screen and (min-width: $tablet)
                $dimension = 300px

                background-image $url
                height $dimension
                width $dimension

            span
                bottom 20px
                width 100%
                text-align center
                position absolute

        a.services
            background-image url('/img/services_sheet.png')

            background-position 0px -526px

            @media screen and (min-width: $tablet)
                background-position 0px -226px
                &:hover,
                &:active
                    background-position 0px -754px

        a.gallery
            background-image url('/img/services_sheet.png')

            background-position -225px -526px

            @media screen and (min-width: $tablet)
                background-position -300px -226px

                &:hover,
                &:active
                    background-position -300px -754px

        a.team
            background-image url('/img/services_sheet.png')

            background-position -451px -526px

            @media screen and (min-width: $tablet)
                background-position -602px -226px

                &:hover,
                &:active
                    background-position -602px -754px
