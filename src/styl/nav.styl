$navbar-bg-alpha = rgba(248, 248, 248, 0.7)
$phone-nav-border = $black

.navbar-sitenav
    margin-bottom 0
    border-radius 0
    border none

    background-color $navbar-bg-alpha

    z-index 10

    .navbar-brand
        img
            width 100px

    .navbar-nav > li > a
        //border-bottom 1px solid grey
        text-align center
        font-size 18px

        &hover,
        &active
            border-bottom 1px solid $nav-active-color
            color $nav-active-color

    .navbar-collapse
        background-color #eee

        @media screen and (min-width: $tablet)
            background-color transparent

.phone-navbar
    margin-top 50px
    a
        font-size 30px

    .navbar-nav > li > a
        background-color transparent

    background-color $navbar-bg-alpha
    border-bottom 1px solid $phone-nav-border

    z-index 9

.navbar-social
    margin-top 105px

    @media screen and (min-width: $tablet)
        margin-top 100px

    margin-bottom 0
    min-height 70px
    text-align center
    border-bottom none
    border-radius 0
    border-color transparent
    background-color $black
    background-color rgba(0, 0, 0, 0.6)

    .icons img
        height 36px

        @media screen and (min-width: $tablet)
            height 40px

    .nav > li > a
        height 48px
        width 48px
        padding 0

        vertical-parent()

        @media screen and (min-width: $tablet)
            margin-left 5px
            margin-right 5px

        img
            display block
            margin-left auto
            margin-right auto

            vertical-align()

            transition height 200 ease

            &:hover, &:active
                height 48px

    ul.nav.navbar-nav
        display inline-block
        float none
        padding-top 5px

        @media screen and (min-width: $tablet)
            padding-top 10px

        li
            float left
            display inline
