.our-services
    border-top 1px solid $black

    background-image url("/img/shelving_bg.jpg")
    background-size cover

    h1
        text-decoration underline

    .footer
        padding-top 1em

    .wrap
        border 5px solid black
        background-color $white
        background-image url("/img/linen_bg.png")
        background-repeat repeat
        padding 2em

    .service-list
        border 10px solid black

    .service-item
        font-size 14p

        text-align center

        @media screen and (min-width: $tablet)
            font-size 14px
            text-align left

        @media screen and (min-width: $medium)
            font-size 20px

        @media screen and (min-width: $large)
            font-size 24px

        .sub
            font-size 10px

            @media screen and (min-width: $tablet)
                font-size 10px
                padding-left 10px

            @media screen and (min-width: $medium)
                font-size 14px

        .price
            font-weight bold
