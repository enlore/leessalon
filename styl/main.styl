$tablet = 768px
$medium = 992px
$large = 1200px

$black = #222
$white = #F8F8F8

$white-alpha = rgba(248, 248, 248, 0.7)

$blue = #00fffa
$nav-active-color = $blue

@import 'header'
@import 'nav'
@import 'components'
@import 'fonts'

body
    background-image url('/img/bg.jpg')
    background-position 0px -600px
    background-attachment fixed

    @media screen and (min-width: $tablet)
        background-position center center

footer
    background-color $white

$intro-border = $black
$intro-shadow = $black

.intro
    background-color $white
    background-image url('/img/intro_bg.jpg')
    border-top 1px solid $intro-border
    border-bottom 1px solid $intro-border

    .lead-copy
        padding 1em
        border-radius 10px
        text-align center
        background-color $white
        background-color $white-alpha

        p.lead
            font-size 26px
        p
            font-size 20px

    box-shadow inset 0px 4px 2px -2px $intro-shadow,
        inset 0px -4px 2px -2px $intro-shadow

    overflow hidden

    .copy
        z-index 2

    .accredations
        z-index 1
        position relative
        img
            margin-top 3em

            @media screen and (min-width: @tablet)
                margin-top 0

.service-boxes
    li
        h3
            background $black
            color $white

        a
            display block
            margin 1em auto
            position relative
            box-shadow 0px 10px 1px -5px $black

            $url = url('//placehold.it/225x225')
            $dimension = 225px

            height $dimension
            width $dimension

            @media screen and (min-width: $tablet)
                $url = url('//placehold.it/300x300')
                $dimension = 300px

                background-image $url
                height $dimension
                width $dimension

            span
                bottom 20px
                width 100%
                text-align center
                position absolute

        a.services
            background-image url('/img/services_sheet.png')
            background-repeat no-repeat

            background-position 0px -526px
    
            @media screen and (min-width: $tablet)
                background-position 0px -226px
                &:hover,
                &:active
                    background-position 0px -754px

        a.gallery
            background-image url('/img/services_sheet.png')
            background-repeat no-repeat

            background-position -225px -526px

            @media screen and (min-width: $tablet)
                background-position -300px -226px

                &:hover,
                &:active
                    background-position -300px -754px

        a.team
            background-image url('/img/services_sheet.png')
            background-repeat no-repeat

            background-position -451px -526px

            @media screen and (min-width: $tablet)
                background-position -602px -226px

                &:hover,
                &:active
                    background-position -602px -754px

