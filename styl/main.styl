$tablet = 768px
$medium = 992px
$large = 1200px

$black = #222
$white = #F8F8F8

$blue = #00fffa
$nav-active-color = $blue

@import 'header'
@import 'nav'
@import 'components'
@import 'fonts'

body
    background-image url('/img/bg.jpg')
    background-position center center
    background-attachment fixed

footer
    background-color $white

$intro-border = $black

.intro
    background-color $white
    border-top 1px solid $intro-border
    border-bottom 1px solid $intro-border

    .accredations
        img
            margin-top 3em

            @media screen and (min-width: @tablet)
                margin-top 0

.service-boxes
    li
        h3
            background $black
            color $white

        a
            display block
            margin 1em auto
            position relative


            $url = url('//placehold.it/225x225')
            $dimension = 225px

            height $dimension
            width $dimension

            @media screen and (min-width: $tablet)
                $url = url('//placehold.it/300x300')
                $dimension = 300px

                background-image $url
                height $dimension
                width $dimension

            span
                bottom 20px
                width 100%
                text-align center
                position absolute

        a.services
            background-image url('/img/services_sheet.png')
            background-position 0px -226px
            background-repeat no-repeat
            &:hover,
            &:active
                background-position 0px -754px

        a.gallery
            background-image url('/img/services_sheet.png')
            background-position -300px -226px
            background-repeat no-repeat
            &:hover,
            &:active
                background-position -300px -754px

        a.team
            background-image url('/img/services_sheet.png')
            background-position -603px -226px
            background-repeat no-repeat
            &:hover,
            &:active
                background-position -603px -754px

